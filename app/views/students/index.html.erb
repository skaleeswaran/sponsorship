<div id='main' role='main'>
  <div id="wrapper">
  <div id='main-content-header'>
    <div class='container'>
      <div class='row'>
        <div class='col-sm-12'>
          <h1 class='title'>
            List of students
          </h1>
        </div>
      </div>
    </div>
  </div>
  </div>
  
  <div id='main-content'>
    <div class='container'>
      <div class="row" style="align-items: center;">
        <div class="col-md-3">
                  <h2>
                  </h2>
          </div>
            <div class="col-sm-10">
            <table class="table">
              <thead>
                <tr>
                  <th>Name </th> 
                  <th>Class</th>
                  <th>Number of Open Requirements</th>
                </tr>
              </thead>
              <tbody>
                <% @students.eager_load(:requirements).each do |student| %>
                <tr>
                  <td><%= student.full_name %></td>
                  <td><%= student.grade %></td>
                  <td><%= student.requirements.where(matched: false).count %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
              
              
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
