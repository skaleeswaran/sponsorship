<div id='main' role='main'>
  <div id="wrapper">
  <div id='main-content-header'>
    <div class='container'>
      <div class='row'>
        <div class='col-sm-12'>
          <h1 class='title'>
            List of sponsors
          </h1>
        </div>
      </div>
    </div>
  </div>
  </div>
  
  <div id='main-content'>
    <div class='container'>
    <div class='pull-right' style="margin-right: 40px;">
      <%= form_for users_path, method: :get do |f| %>
        <p>
          <%= f.label "Search for" %>
          <%= text_field_tag :q, params[:q] %>
          <%= submit_tag "Go", name: nil %>
        </p>
      <% end %>
      </div>
      <div class="row" style="align-items: center;">
        <div class="col-md-3">
                  <h2>
                  </h2>
          </div>
            <div class="col-sm-10">
            <table class="table">
              <thead>
                <tr>
                  <th>Name </th> 
                  <th>Email</th>
                  <th>Sponsorship Details</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= link_to "Sponsorship Details", user %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
              
              
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
