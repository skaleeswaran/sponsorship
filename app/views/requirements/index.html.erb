<div id='main' role='main'>
  <div id="wrapper">
  <div id='main-content-header'>
    <div class='container'>
      <div class='row'>
        <div class='col-sm-12'>
          <h1 class='title'>
            List of requirements
          </h1>
        </div>
      </div>
    </div>
  </div>
  </div>
  
  <div id='main-content'>
    <div class='container'>
      <div class="row" style="align-items: center;">
        <div class="col-md-3">
                  <h2>
                  </h2>
          </div>
            <div class="col-sm-10">
            <table class="table">
              <thead>
                <tr>
                  <th>Student Name </th> 
                  <th>Class</th>
                  <th>Requirements</th>
                </tr>
              </thead>
              <tbody>
                <% @students.each do |student| %>
                <tr>
                  <td><%= student.full_name %></td>
                  <td><%= student.grade %></td>
                  <td>
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Requirement Type</th> 
                          <th>Cost</th>
                          <th>Description</th>
                        </tr>
                      </thead>
                      <tbody>
                      <% student.requirements.each do |req| %>
                        <tr>
                          <td><%= req.rtype %></td>
                          <td><%= req.cost %></td>
                          <td><%= req.description %></td>
                          <td><%= link_to "Sponsor", sponsorship_ds_path, method: :post %></td>
                        </tr>
                      <% end %>  
                      </tbody>
                    </table>
                      
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
              
              
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
